    "version": "0.2.0",
    "configurations": [
        {
            "name": "Capture",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/recterm",
            "args": [
                "capture",
                "--name",
                "demo.xml"
            ],
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Render",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/recterm",
            "args": [
                "render",
                "--name",
                "demo.xml"
            ],
            "cwd": "${workspaceRoot}"
        }
    ]
}